<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_weight="1"
                    android:text="@string/invoice_id"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/invoice_id"
                    android:layout_weight="3"
                    android:text="#RF-242-412-543"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_weight="1"
                    android:text="@string/paid_by"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/paid_by"
                    android:layout_weight="3"
                    android:text="lehuyhoang1111999@gmail.com"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_weight="1"
                    android:text="@string/paid_time"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/paid_on"
                    android:layout_weight="3"
                    android:text="Jun 17, 2021 14:37:29"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_weight="1"
                    android:text="@string/paid_amount"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/paid_amount"
                    android:layout_weight="3"
                    android:text="1000 VND"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/exchange_earning"
            android:src="@drawable/ic_down_arrown"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"/>
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/dot_border"
        android:layerType="software" />
</LinearLayout>